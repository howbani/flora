<Window x:Class="FLORA.ui.UiAddNodes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UiAddNodes" 
        Height="170"
        Width="300"
        MaxHeight="170" MaxWidth="300">
    
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Width="120">Number of Nodes:</Label>
            <TextBox Text="30" Name="txt_nodes_number" Width="120"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="120">r:</Label>
            <TextBox Text="25" Name="txt_range" Width="120"></TextBox>
        </StackPanel>
        
        <Button Click="Button_Click" Margin="0,2,190,0">OK</Button>
        <StackPanel Orientation="Horizontal" Height="23" Margin="0,10,16,0">
            <Label Width="120">Add Node:</Label>
            <TextBox Text="20" Name="add_node" Width="120"></TextBox>
        </StackPanel>
        <Button Click="new_node_click" Margin="0,2,190,0">Add</Button>
    </StackPanel>
    
</Window>
